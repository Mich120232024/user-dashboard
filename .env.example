# Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-primary-key
COSMOS_DATABASE_ID=research-analytics-db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Azure Blob Storage
BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage;AccountKey=your-key;EndpointSuffix=core.windows.net

# Gremlin Database
GREMLIN_ENDPOINT=wss://your-gremlin.gremlin.cosmos.azure.com:443/
GREMLIN_KEY=your-gremlin-key

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO