# Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME="User Dashboard API"
APP_VERSION="0.1.0"

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/user_dashboard

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External Service URLs
AGENT_MANAGEMENT_API_URL=http://agent-management:8001
MESSAGE_SERVICE_API_URL=http://message-service:8002

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true